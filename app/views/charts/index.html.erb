<section id="charts" class="">
  <h1>My Business Models</h1>
  <div class="">
    <div class="flip-container new_chart_container">
      <div class="flipper">
        <article class="front chart new_chart">
          <div class="vcenter">
            <%= fa_icon "plus-circle", text: "Add New Model" %>
          </div>
        </article>
        <article class='back chart new_chart <%= "chart-#{cycle(1, 2, 3, 4, 5, 6)}" %>'>
          <div class="vcenter">
            <h2>Add a New Model</h2>
            <%= simple_form_for @new_chart do |f| %>
              <%= f.input :title, label: false, placeholder: "Title of the Business Idea" %>
              <%= f.input :description, label: false, placeholder: "Describe the idea" %>
              <%= f.submit "Create", class: "btn", data: {'disable-with' => "Please Wait"} %>
              <%= link_to "cancel", "#", class: "cancel" %>
            <% end %>
          </div>
        </article>
      </div>
    </div>
    <% @charts.each do |chart| %>
      <div class="flip-container">
        <div class="flipper">
          <% chart_cycle_class = "chart-#{cycle(1, 2, 3, 4, 5, 6)}" %>
          <article class='front chart <%= chart_cycle_class %>'>
            <div class="vcenter">
              <%= chart.title %>
            </div>
          </article>
          <article class='back chart <%= chart_cycle_class %>'>
            <div class="vcenter">
              <h3><%= chart.title %></h3>
              <p><%= chart.description %></p>
            </div>
          </article>
        </div>
      </div>
    <% end %>
  </div>
</section>