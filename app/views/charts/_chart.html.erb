<% show_link_id = "show-chart-link-#{chart.id}" %>
<div class="flip-container chart-slide" data-target="#<%= show_link_id %>">
  <div class="flipper">
    <% chart_cycle_class = "chart-#{cycle(1, 2, 3, 4, 5, 6)}" %>
    <article class='front chart <%= chart_cycle_class %>'>
      <div class="vcenter">
        <%= chart.title %>
      </div>
    </article>
    <article class='back chart <%= chart_cycle_class %>'>
      <div class="vcenter">
        <h3><%= chart.title %></h3>
        <p><%= chart.description %></p>
      </div>
    </article>
  </div>
</div>
<%= link_to "View", chart_path(chart), id: show_link_id, class: "hidden" %>